<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bground"
    tools:context="com.example.ucordilleras.leafspot_disease">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Strawberry fruit - Graymold "
        android:textAlignment="viewStart"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textColor="#0D1D27" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="190dp"
        android:layout_height="168dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/graymold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Management/Panang-aywan"
        android:textAlignment="viewStart"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:textColor="#2d6184" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="365dp"
        android:layout_height="0dp"
        android:layout_marginTop="68dp"
        android:text="Alisin at sirain ang lahat ng patay o nahawaang materyal; alisin ang nabubulok na prutas; tumubo ng prutas sa ilalim ng plastik; gumamit ng plastic mulch upang mabawasan ang contact ng prutas sa lupa; mag-apply ng naaangkop na fungicides(Mga antagonistic fungi tulad ng Trichoderma harzianium Rifai at Gliocladium roseum Bainier); magtanim sa mga lugar kung saan ang hangin ay mabilis na matutuyong basang halaman at prutas; araro ng mga dumi ng lupa sa lupa pagkatapos ng pag-aani."
        android:textAlignment="viewStart"
        android:textSize="16dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.173"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:textColor="#000000" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="268dp"
        android:text="Comment/Komentaryo"
        android:textAlignment="viewStart"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:textColor="#2d6184" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="365dp"
        android:layout_height="0dp"
        android:layout_marginTop="312dp"
        android:text="Ang paglitaw ng sakit na pinapaboran ng mga pinalawig na tagal ng mataas na kahalumigmigan o basa na dahon sa panahon ng pamumulaklak at katamtamang temperatura."
        android:textAlignment="viewStart"
        android:textSize="16dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.173"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:textColor="#000000" />


</androidx.constraintlayout.widget.ConstraintLayout>